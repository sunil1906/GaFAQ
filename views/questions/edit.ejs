<%- include("../partials/header.ejs") %>

<div class = container>
	<div class="row">
		<h1 style="text-align: center;"> Edit your Question here </h1>
		<div style="width: 70%; margin: 20px auto;">
			<form action="/home/<%=question._id%>?_method=PUT" method="POST">
				
				<div class="form-group">
					<textarea class="form-control" type="text" name="question[question]" rows="4" cols="50" required><%=question.question%></textarea> 
				</div>

				<div class="form-group">
					<label>Tag</label>
					<input class="form-control" type="text" name="question[tags]" placeholder="Add a Tag related to question..."  value="<%question.tags%>"></input> 
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>	
			<a href="/home/<%=question._id%>"> Go Back </a>		
		</div>
	</div>
</div>	

<%- include ("../partials/footer.ejs") -%>