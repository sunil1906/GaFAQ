<%-include("../partials/header.ejs")%>

<div class="container userPage">
	
	<%if(user.profile){%>	
		<img id="profilePicUserPage" src="<%=user.profile%>"> 
	<%} else{%>
		<svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
		<path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
		<path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
		<path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
		</svg>
				
	<%}%>

	<h2><b><%=user.firstName%></b></h2>
	<h4><%=user.profession%></h4>
	<hr>
	<p>About <b><%=user.firstName%></b>:</p>
	<p><%=user.aboutMe%></p>

	<hr>

	

		<div id="profileQuestions" id = "homeBody">
			<h1>Questions asked by <%=user.firstName%></h1>
			<div >
				<% for(var i=0;i<user.questions.length; i++){ %>	
					<div id="outerofeachquestion">
						<div id="homeEachQuestion">
							<%if(user.questions[i].userProfile){%>	
								 
								<a href="/home/user/<%=user.questions[i].author.id%>"><img id="profilePic" src="<%=user.questions[i].userProfile%>"></a>
							<%} else{%>

								<a href="/home/user/<%=user.questions[i].author.id%>">
									 <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									  <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
									  <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
									  <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
									</svg>
								</a>
	
							<%}%>

							<h3> <b><%=user.questions[i].question%></b> </h3>
							
							<p class="pull-right" ><b> Answers &nbsp&nbsp<span id="noOfAnswers" ><%=user.questions[i].answers.length%></span></b></p>
							<p>Asked by: <a href="/home/user/<%=user.questions[i].author.id%>"><%=user.questions[i].author.username%></a></p>
							<p>Asked on <%= user.questions[i].date.toDateString()%> in <h4>Tags: <b><%= user.questions[i].tags %></b></h4></p>
							<a href="/home/<%= user.questions[i]._id%>" class="btn btn-primary"> View Answers <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
							
					</div>
					</div>
				<% } %>
			</div>			
		</div>

</div>

<%-include("../partials/footer.ejs")%>